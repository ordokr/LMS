# Ordo Environment Configuration Example
# Copy this file to .env and modify as needed

# Environment
ORDO_ENV=development  # development, test, or production
CONFIG_PATH=config.toml

# App Configuration
APP_NAME=Ordo LMS
APP_VERSION=0.1.0
APP_DEBUG=false
RUST_LOG=info

# Database Configuration
DATABASE_PATH=ordo.db
DATABASE_URL=sqlite://ordo.db
DATABASE_POOL_SIZE=5
DATABASE_MAX_CONNECTIONS=20
DATABASE_TIMEOUT_SECONDS=30

# Server Configuration
PORT=3000
HOST=127.0.0.1

# API Configuration
API_KEY=your_api_key_here

# Forum Configuration
FORUM_TITLE=Discussion Forum
FORUM_DESCRIPTION=Course discussion forum
FORUM_POSTS_PER_PAGE=20
FORUM_TOPICS_PER_PAGE=10
FORUM_ENABLE_MARKDOWN=true
FORUM_ENABLE_CODE_HIGHLIGHTING=true
FORUM_ENABLE_LATEX=true
FORUM_MAX_POST_LENGTH=10000
FORUM_MAX_TITLE_LENGTH=100

# Search Configuration
SEARCH_ENABLED=true
SEARCH_PROVIDER=meilisearch
MEILI_HOST=http://localhost:7700
MEILI_MASTER_KEY=your_meilisearch_master_key
SEARCH_AUTO_INDEX=true
SEARCH_INDEX_INTERVAL_MINUTES=10

# Media Configuration
MEDIA_STORAGE_PATH=uploads
MEDIA_MAX_UPLOAD_SIZE_MB=10
MEDIA_ALLOWED_EXTENSIONS=jpg,jpeg,png,webp,gif,pdf
MEDIA_OPTIMIZE_IMAGES=true
MEDIA_MAX_IMAGE_WIDTH=1200
MEDIA_THUMBNAIL_SIZE=200

# WebSocket Configuration
WEBSOCKET_ENABLED=true
WEBSOCKET_PORT=3001
WEBSOCKET_PING_INTERVAL_SECONDS=30
WEBSOCKET_MAX_CONNECTIONS=100

# Canvas Integration
CANVAS_API_URL=https://canvas.example.com/api/v1
CANVAS_API_KEY=your_canvas_api_key_here
CANVAS_OAUTH_CLIENT_ID=your_canvas_oauth_client_id
CANVAS_OAUTH_CLIENT_SECRET=your_canvas_oauth_client_secret
CANVAS_OAUTH_REDIRECT_URL=http://localhost:3000/canvas/callback

# Discourse Integration
DISCOURSE_URL=https://discourse.example.com
DISCOURSE_API_KEY=your_discourse_api_key_here
DISCOURSE_API_USERNAME=system

# Security Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRATION=24h

# Monitoring Configuration
MONITORING_PORT=3001
ENABLE_METRICS=true

# Feature Flags
ENABLE_OFFLINE_MODE=true
ENABLE_BLOCKCHAIN=true
